{
  "version": "2.0.0",
  "command": "cmake",
  "args": [
    "--build",
    "${workspaceRoot}/build",
    "--target"
  ],
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "clear": true
  },
  "problemMatcher": [
    "$rustc",
    "$tsc"
  ],
  "tasks": [
    {
      "label": "dev_debugging",
      "args": [
        "dev_debugging"
      ]
    },
    {
      "label": "tests",
      "args": [
        "dev_debugging"
      ]
    },
    {
      "label": "lldb",
      "args": [
        "lldb"
      ]
    },
    {
      "label": "adapter",
      "args": [
        "adapter"
      ]
    },
    {
      "label": "codelldb",
      "args": [
        "codelldb"
      ]
    },
    {
      "label": "debuggee",
      "args": [
        "debuggee"
      ]
    },
    {
      "label": "check_codelldb",
      "args": [
        "check_codelldb"
      ]
    },
    {
      "label": "doc_lldb",
      "args": [
        "doc_lldb"
      ]
    },
    {
      "label": "test_codelldb",
      "args": [
        "test_codelldb"
      ]
    },
    {
      "label": "cargo expand",
      "command": "cargo",
      "args": [
        "expand",
        "--package=codelldb",
        "--lib"
      ]
    },
    {
      "type": "shell",
      "label": "Start extension host",
      "command": "code --extensionDevelopmentPath=${workspaceFolder}/build ${workspaceFolder}/debuggee",
    },
    {
      "type": "shell",
      "label": "Start extension host (Insiders)",
      "command": "code-insiders --extensionDevelopmentPath=${workspaceFolder}/build ${workspaceFolder}/debuggee",
    },
    {
      "type": "shell",
      "label": "Start extension host (dev VSCode)",
      "command": "${workspaceFolder}/../vscode/scripts/code.sh --extensionDevelopmentPath=${workspaceFolder}/build ${workspaceFolder}/debuggee",
    },
    {
      "label": "vsix_extracted",
      "args": [
        "vsix_extracted"
      ]
    },
    {
      "type": "shell",
      "label": "Start extension host on extracted vsix",
      "command": "code --extensionDevelopmentPath=${workspaceFolder}/build/extracted/extension ${workspaceFolder}/debuggee",
      "dependsOn": "vsix_extracted"
    },
    {
      "type": "process",
      "label": "debug launch classic adapter",
      "command": "python",
      "args": [
        "${workspaceFolder}/tools/debug_launcher.py",
        "--launch-adapter",
        "${workspaceFolder}/adapter",
        "--lldb",
        "${config:lldb.executable}",
        "--wait-port",
        "3000"
      ]
    },
    {
      "type": "process",
      "label": "debug launch bundled adapter",
      "command": "python",
      "args": [
        "${workspaceFolder}/tools/debug_launcher.py",
        "--launch-adapter",
        "${workspaceFolder}/adapter",
        "--lldb",
        "${workspaceFolder}/build/lldb/bin/lldb",
        "--wait-port",
        "3000"
      ]
    },
    {
      "type": "process",
      "label": "wait for port 3000",
      "command": "python",
      "args": [
        "${workspaceFolder}/tools/debug_launcher.py",
        "--wait-port",
        "3000"
      ]
    },
    {
      "type": "process",
      "label": "rustfmt",
      "command": "rustfmt",
      "args": [
        "${file}"
      ]
    },
    {
      "label": "cargo build example pyo3",
      "command": "cargo",
      "args": [
        "build",
        "--example",
        "pyo3"
      ],
    },
    {
      "label": "cargo check",
      "command": "cargo",
      "args": [
        "check"
      ]
    }
  ]
}
